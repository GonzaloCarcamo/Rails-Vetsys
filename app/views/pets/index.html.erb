<p id="notice"><%= notice %></p>

<h1 class="text-center">Listado de Pacientes</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Raza</th>
      <th scope="col">Fecha de Nacimiento</th>
      <th scope="col">Dueño</th>
      <th scope="col">Contacto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.born %></td>
        <td><%= pet.owner %></td>
        <td><%= pet.contact %></td>
        <td><%= link_to 'HISTORIAL', pet %></td>
        <td><%= link_to 'EDITAR', edit_pet_path(pet) %></td>
        <td><%= link_to 'ELIMINAR', pet, method: :delete, data: { confirm: 'Está seguro de la eliminación?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


