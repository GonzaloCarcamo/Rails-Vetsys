<div class="col-lg-6">

<%= form_with(model: history, local: true) do |form| %>
  <% if history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(history.errors.count, "error") %> prohibited this history from being saved:</h2>

      <ul>
      <% history.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :"Peso (Kg)" %>
    <%= form.number_field :weight, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :"Altura (Cms)" %>
    <%= form.number_field :height, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :Observaciones %>
    <%= form.text_field :observation, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :Pacientes %> <br>
    <%= form.select :pet_id, options_from_collection_for_select(@pets, "id", "name"),
    class:'form-control', prompt:'Selecciona al paciente' %>
  </div>

  <div class="actions form-group">
    <%= form.submit class:'form-control btn btn-dark' %>
  </div>
<% end %>

</div>
